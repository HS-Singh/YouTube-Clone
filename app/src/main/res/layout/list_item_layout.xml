<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="720px"
    android:layout_height="250px">

    <ImageView
        android:id="@+id/vidThumb"
        android:layout_width="300px"
        android:layout_height="200px"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#000"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/vidTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/exo_controls_play" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/vidTitle"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:ellipsize="none"
        android:scrollHorizontally="false"
        android:text="Big Buck Bunny 60fps- Official Blender Foundation short film"
        android:textSize="25px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vidThumb"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.51" />


</androidx.constraintlayout.widget.ConstraintLayout>